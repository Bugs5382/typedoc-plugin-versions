{
	"include" : ["src"],
	"compilerOptions": {
		"jsx": "react",
		"jsxFactory": "JSX.createElement",
		"jsxFragmentFactory": "JSX.Fragment",
		"resolveJsonModule": true,
		"allowJs": true,
		"outDir": "dist",
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "ES6",
		"esModuleInterop": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"build": true,
		"incremental": true
	},
	"exclude": [
		"./node_modules",
		"./package.json"
	]
}