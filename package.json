{
	"name": "typedoc-plugin-versions",
	"version": "1.2.1",
	"description": "Provides typedoc versioning as per the npm version with dropdown selector",
	"main": "src/index",
	"scripts": {
		"test": "nyc mocha",
		"build": "tsc",
		"docs": "tsc && typedoc"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/citkane/typedoc-plugin-versions.git"
	},
	"keywords": [
		"typedoc",
		"plugin",
		"typedoc-plugin",
		"versions",
		"versioning"
	],
	"author": "Michael Jonker",
	"license": "MIT",
	"devDependencies": {
		"@types/chai": "^4.3.1",
		"@types/fs-extra": "^9.0.13",
		"@types/mocha": "^9.1.1",
		"@types/node": "^18.6.2",
		"chai": "^4.3.6",
		"fs-extra": "^10.1.0",
		"mocha": "^10.0.0",
		"nyc": "^15.1.0",
		"sinon": "^14.0.0",
		"ts-node": "^10.9.1",
		"typedoc": "^0.23.9",
		"typescript": "^4.7.4"
	},
	"peerDependencies": {
		"typedoc": "^0.23"
	},
	"mocha": {
		"extension": [
			"ts"
		],
		"file": "./test/index.spec.ts",
		"require": [
			"ts-node/register/transpile-only",
			"source-map-support/register",
			"./test/hooks.ts"
		],
		"exit": true
	},
	"nyc": {
		"extension": [
			".ts",
			".tsx"
		],
		"include": [
			"src/**/*.ts"
		],
		"reporter": [
			"clover",
			"text"
		],
		"all": true,
		"report-dir": "./test/coverage",
		"temp-dir": "./test/.nyc_output"
	}
}
